    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome for the angular debug",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080/base",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "java",
            "name": "Launch StartWebApplication",
            "request": "launch",
            "mainClass": "ru.base.StartWebApplication",
            "projectName": "base",
	        "vmArgs" : "-Dfile.encoding=UTF-8"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}",
	        "vmArgs" : "-Dfile.encoding=UTF-8"
        },
        {
            "type": "java",
            "name": "Launch SpringBootAngularApplication",
            "request": "launch",
            "mainClass": "ru.base.SpringBootAngularApplication",
            "projectName": "base",
	        "vmArgs" : "-Dfile.encoding=UTF-8"
        }
    ]
}